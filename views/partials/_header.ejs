<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav d-flex d-flex container-fluid align-items-center">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
        <div class="navbar-nav ml-auto d-flex align-items-center">
          <% if (user) { %>
          <a class="nav-item nav-link" href="#"
            >User:
            <span class="text-white font-weight-bold"> <%= user.email %></span></a
          ><form method="POST" class="nav-item nav-link" action="/logout"
            ><button
              type="submit"
              class="btn btn-info text-white text-capitalize font-weight-bold"
            >
              logout
            </button></form method="POST"
          >
          <% } else { %>
          <form class="d-flex" method="POST" action="/login">
            <input type="text" name="username" class="form-control mr-4" />
            <button class="btn btn-info">Login</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>
